<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= @organization.name %></h1>
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_admin_organization_path(@organization), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back to Organizations", admin_organizations_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Organization Details</h3>
          <dl class="space-y-3">
            <div>
              <dt class="text-sm font-medium text-gray-500">Name</dt>
              <dd class="text-sm text-gray-900"><%= @organization.name %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Country</dt>
              <dd class="text-sm text-gray-900"><%= @organization.country %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Founded Year</dt>
              <dd class="text-sm text-gray-900"><%= @organization.founded_year %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Website</dt>
              <dd class="text-sm text-gray-900">
                <% if @organization.website %>
                  <%= link_to @organization.website, @organization.website, target: "_blank", class: "text-blue-600 hover:text-blue-800" %>
                <% else %>
                  <span class="text-gray-400">Not specified</span>
                <% end %>
              </dd>
            </div>
          </dl>
        </div>
        
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Description</h3>
          <p class="text-sm text-gray-700">
            <%= @organization.description || "No description available." %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
