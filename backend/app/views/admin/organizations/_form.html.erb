<%= form_with(model: [:admin, organization], local: true, class: "space-y-6") do |form| %>
  <% if organization.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2><%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:</h2>
      <ul>
        <% organization.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div>
    <%= form.label :country, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :country, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div>
    <%= form.label :founded_year, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :founded_year, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div>
    <%= form.label :website, class: "block text-sm font-medium text-gray-700" %>
    <%= form.url_field :website, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div>
    <%= form.label :logo_url, class: "block text-sm font-medium text-gray-700" %>
    <%= form.url_field :logo_url, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", admin_organizations_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>